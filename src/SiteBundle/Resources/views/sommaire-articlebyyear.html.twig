{% if articlesByYear is defined %}
    {% for articleyear,items in articlesByYear %}
        </br>
        <h3>Année {{articleyear}}</h3>
        {% set category = '' %}
        {% for item in items %}
            {% if category != item.typeArticleName %}
                {% if category != '' %}
                    </div>
                {% endif %}
                </br>
                <span  class="info-page"> Catégorie: </span><a href="{{path('site_buildpage', {'slug':(item.typeArticleName |replace({' ': '_'})|lower())})}}">{{item.typeArticleName }}</a>
                <div class="list-items">
            {% endif %}
            
                <div class="item row">
                    <div class="icon" >
                        <a class="" href="{{path('site_buildpageid',{'slug':'article','id':(item.slug is empty? item.id:item.slug) })}}">
                            <img src="{{ vich_uploader_asset(item, 'photoFile', 'SiteBundle\\Entity\\Article') }}" alt="{{ item.title }}">
                        </a>
                    </div>
                    <div class="info col">
                        <div class="title">
                            <a href="{{path('site_buildpageid',{'slug':'article','id':(item.slug is empty? item.id:item.slug) })}}">{{item.title}}</a>
                        </div>
                        <div class="date">
                            Publié le {{item.publishedAt| date('d/m/Y')}}
                        </div>
                        {# <div class="content">
                            {{item.content| raw }} 
                        </div> #}
                        <a class="" href="{{path('site_buildpageid',{'slug':'article','id':(item.slug is empty? item.id:item.slug) })}}"> > lire l'article</a>
                    </div>
                </div>
            {% if category != item.typeArticleName %}
                {% set category = item.typeArticleName %}
            {% endif %}
        {% endfor %}
        {% if items is not empty %}
            </div>
        {% endif %}
        </br>
    {% endfor %}
{% endif %}