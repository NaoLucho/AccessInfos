{% if categorie is defined and categorie is not empty %}
<div class="filters">
    <span  class="info-page"> Catégorie: </span><a href="{{path('site_buildpage', {'slug':(categorie|replace({' ': '_'})|lower())})}}">{{categorie}}</a>
</div>
{% else %}
    {# <form  action="{{ path('site_buildpage', {'slug': 'recherche'}) }}" method="GET">
    <div class="search-container">
        <input placeholder="{{ request.query.get("search") }}" type="text">
        <button type="submit" name="search"><i class="fa fa-search"></i></button>
    </div>
    </form> #}
    <div>Résultats de votre recherche: {{ request.query.get("search") }}</div>
{% endif %}
<div class="nbresults">{{nb_total_items}} article{% if nb_total_items > 1 %}s{% endif %}</div>
<div class="list-items">
    {% if items is defined %}
        {% for item in items %} 
        {# {dump(item)}} #}
            {% if item is iterable %}
                {% set item = item[0] %}
            {% endif %}
            <div class="item row">
                <div class="illustration col-3" >
                    <a class="" href="{{path('site_buildpageid',{'slug':'article','id': (item.slug is empty? item.id:item.slug) })}}">
                        <img src="{{ vich_uploader_asset(item, 'photoFile') }}" alt="{{ item.title }}">
                    </a>
                </div>
                <div class="info col">
                    <div class="title">
                        <a href="{{path('site_buildpageid',{'slug':'article','id':(item.slug is empty? item.id:item.slug) })}}">{{item.title}}</a>
                    </div>
                    <div class="date">
                        Publié le {{item.publishedAt| date('d/m/Y')}}
                    </div>
                    <div class="content">
                        {{item.content| striptags | slice(0,400) | raw }} 
                    </div>
                    <a class="" href="{{path('site_buildpageid',{'slug':'article','id':(item.slug is empty? item.id:item.slug) })}}"> > lire l'article</a>
                </div>
            </div>
        {% endfor %}
    {% endif %}

    {# pager #}
    {% if categorie is defined and categorie is not empty and request.get("slug") != (categorie|replace({' ': '_'})|lower()) %}
        <a class="mb-5 d-flex justify-content-center" href="{{ path('site_buildpage', {'slug': (categorie|replace({' ': '_'})|lower())})}}">> voir plus d'articles</a>
    {% elseif pages > 1 and numpage is defined %}
        <nav class="single-pager mt-3">
            <ul class="pagination justify-content-center">
                {% for p in 1..pages %}
                    <li class="{{ p == numpage ? 'active' : ''}}">
                        <a class="pager-item" index="{{loop.index}}" href="{{ path('site_buildpage', {'slug': ((categorie is defined and categorie is not empty)?(categorie|replace({' ': '_'})|lower()) : request.get("slug")) , 'request' : request,'p': p})}}">{{ loop.index }}</a>{{ loop.index != loop.length ? '-'}}
                    </li>
                {% endfor %}
            </ul>
        </nav>
    {% endif %}

</div>