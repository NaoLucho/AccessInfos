<div class="page-hero">
  {# {{imageHero}} #}
  {% if page.hearderImage is defined and page.headerImage is not null %}
    <img src="{{ asset( template_repo ~ '/assets/images/headers/' ~ page.headerImage )}}" alt="{{title is defined ? title}}">
  {% else %}
    <img src="{{imageHero is defined ? asset( template_repo ~ '/assets/images/' ~ imageHero ): asset( template_repo ~ '/assets/images/VisuelPresse.jpg' )}}" alt="{{title is defined ? title}}">
  {% endif %}
  {% if title is defined %}
  <div class="page-hero__title">
    <div class="container">
      <h1>{{title}}</h1>
    </div>
  </div>
  {% endif %}
</div>
